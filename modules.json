{
  "version": "1.0",
  "modules": [
    {
      "key": "writer",
      "desc": "Writes notes, actions, and scripts to artifacts and logs",
      "api": {
        "writeNote": { "params": ["text", "tags"], "artifact": "notes/*.json" },
        "writeAction": { "params": ["action", "meta"], "artifact": "actions/*.json" }
      },
      "depends_on": ["log_server", "ai_watcher_login"]
    },
    {
      "key": "editor",
      "desc": "Edits manifests and research artifacts with provenance",
      "api": {
        "editManifest": { "params": ["path", "patch"], "artifact": "manifests/*.json" }
      },
      "depends_on": ["log_server"]
    },
    {
      "key": "reader",
      "desc": "Reads artifacts and builds indexes for SPA",
      "api": {
        "fetchArtifact": { "params": ["path"], "artifact": "artifacts/*" },
        "buildIndex": { "params": ["dir"], "artifact": "indexes/*.json" }
      },
      "depends_on": ["log_server"]
    },
    {
      "key": "scriptor",
      "desc": "Generates paste-ready scripts with color-logic hooks",
      "api": {
        "generate": { "params": ["topic", "options"], "artifact": "scripts/*.txt" }
      },
      "depends_on": ["writer", "reader"]
    },
    {
      "key": "adjustor",
      "desc": "Applies parameter adjustments (micro/macro) to modules",
      "api": {
        "tune": { "params": ["module", "params"], "artifact": "adjustments/*.json" }
      },
      "depends_on": ["ecosystems_system"]
    },
    {
      "key": "autopilot",
      "desc": "Schedules module actions and builds bundles",
      "api": {
        "schedule": { "params": ["job", "when"], "artifact": "jobs/*.json" },
        "bundle": { "params": ["name", "items"], "artifact": "bundles/*.json" }
      },
      "depends_on": ["crosslinker", "log_server"]
    }
  ]
}